<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <%- include('navbar', {user:user})%> 

    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                <div class="card" id="profile-wrapper" data-user-image="<%= user.profileImage %> " style="width: 18rem;">
                    <img src="http://localhost:8080<%= user.profileImage %>" alt="">
                </div>
            </div>
            <div class="col-7">
                <form action="/profil/<%= user.name %>?_method=PUT">
                    <fieldset disabled>
                        <h1>Informacje o tobie</h1>
                        <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Nick</label>
                            <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= user.name %> ">
                           
                        </div>
                        <div class="mb-3">
                            <label for="disabledSelect" class="form-label">Opis</label>
                            <textarea name="" id="" rows="3"></textarea>
                            
                            </select>
                        </div>
                      <button type="submit" class="btn btn-primary">Edytuj</button>
                    </fieldset>
                  </form>
            </div>
            <div class="col-2">
                <%- include('sidebar', {user:user})  %> 
            </div>
        
          
        </div>
        <div class="row">

        </div>
    </div>
    <script>
        let profileWrapper = document.getElementById('profile-wrapper')
        function getProfileImage(){
            let url = profileWrapper.getAttribute('data-user-image')
            fetch(`http://localhost:8080${url}`, {
                method: 'GET'
            })
            .then( (response)=>{
              console.log(response)
            })
            .catch(e=>{
                console.error(e)
            })
        }
        getProfileImage()

    </script>

</body>
</html>