                        <h1>Informacje o tobie</h1>
                        <div class="mb-3">
                            <label for="disabledTextInput" class="form-label">Nick</label>
                            <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= data.user.name %> ">
                           
                        </div>
                        <div class="mb-3">
                            <label for="disabledSelect" class="form-label">Opis</label>
                            <textarea name="" id="" cols="100" rows="3"></textarea>
                            
                            </select>
                        </div>
